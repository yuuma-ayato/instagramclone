<h2>投稿一覧</h2>

<% if logged_in? %>
  <h3><%= link_to '新しく投稿する', new_picture_path %></h3>
<% else %>
  <h3><%= link_to 'ログインしてください', new_session_path %></h3>
  初めての方は<%= link_to "Sign up", new_user_path %>をお願いします
<% end %>

<% @pictures.each do |picture| %>
<div class="contents">
  <ul>
    <li class="col-sm-12 col-md-offset-4 col-md-4">
      <h4>「<%= picture.title %>」</h4>
      <p><%= picture.content %></p>
      <p><%= image_tag(picture.image.url) %></p>
      <p>投稿者：<%= picture.user.name %></p>
      <br>
      <p><%= link_to '詳細を確認する', picture_path(picture.id) %></p>
      <% if logged_in? %>
        <% if picture.user_id == current_user.id %>
          <p><%= link_to "編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集していいですか？' } %></p>
          <p><%= link_to '削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></p>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
<% end %>
